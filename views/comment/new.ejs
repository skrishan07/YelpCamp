<%- include ("../partials/header") %>

<div class="container text-center formLogin">
    <div class="card">
        <h3 class="mt-4">Add Comment to <%= camp.title %> </h3>
        <div style="width:90%; margin: 20px auto;">
            <form action="/campgrounds/<%= camp._id %>/comment" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" rows="3" placeholder="Text"></textarea>
                    <!-- <input type="text" class="form-control" name="comment[text]" placeholder="Text" > -->
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary form-control">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include ("../partials/footer") %>