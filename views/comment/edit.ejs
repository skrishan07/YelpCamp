<%- include ("../partials/header") %>

<div class="container text-center formLogin">
    <div class="card">
        <h3 class="mt-4">Edit Comment</h3>
        <div style="width:90%; margin: 20px auto;">
        <form action="/campgrounds/<%= camp %>/comment/<%=comment.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" rows="3"><%=comment.text%></textarea>
                <!-- <input type="text" class="form-control" name="comment[text]" value="<%=comment.text%>" > -->
            </div>
            <div class="form-group">
                <button class="btn btn-outline-primary form-control">Submit</button>
            </div>
        </form>
        </div>
    </div>
</div>


