<%- include ("../partials/header") %>

<div class="container text-center formShow">
    <div class="card">
        <h3 class="mt-4">Edit <%=campground.title %> </h3>
        <div style="width:90%; margin: 20px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="camp[title]" value="<%=campground.title%>" >
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="camp[price]" value="<%=campground.price%>" min="100" step="10" >
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camp[description]" rows="4"><%=campground.description%></textarea>
                    <!-- <input type="text" class="form-control" name="camp[description]" value="<%=campground.description%>" > -->
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="camp[image]" value="<%=campground.image%>" >
                </div>
                <div class="form-group">
                    <button class="form-control btn btn-outline-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
    <!-- <form action="/campgrounds/<%=campground._id%>" method="GET">
        <button class="btn btn-outline-secondary mt-3 float-left">Go Back</button>
    </form> -->
    
    
</div>

<%- include ("../partials/footer") %>